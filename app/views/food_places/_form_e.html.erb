<div class="row">
  <div class="col-md-8">
    <div id='general' class='panel panel-default'>  
      <div class="panel-body">
        <fieldset>
          <legend><%= t(:location)%></legend>
            <%= form_for @food_place, html: {class: 'form-horizontal', role: 'form', multipart: true} do |form| %>
               <div class='form-group'>
                  <div class='col-sm-10'>
                    <%= form.text_field :name, placeholder: t(:name), class: 'form-control' %>
                  </div>
               </div>
                <div class='form-group'>
                  <div class='col-sm-10'>
                    <%= image_tag @food_place.photo.big, {class: 'img-rounded'} %>
                  </div>
                </div>
                <div class='form-group'>
                  <div class='col-sm-10'>     
                    <%= form.file_field :photo, class: 'filestyle', dataicon: 'false', id:'photo'   %>
                  </div>
                </div>
                <div class='form-group'>
                  <div class='col-sm-10'>
                    <%= form.text_field :phone_number, placeholder: t(:phone_number), class: 'form-control' %>
                  </div>
                </div>
                <div class='form-group'>
                  <div class='col-sm-10'>
                    <%= form.text_field :time, placeholder: t(:time), class: 'form-control' %>
                  </div>
                </div>
                <div class='form-group'>
                  <div class='col-sm-10'>
                    <%= form.text_field :address1, placeholder: t(:address1), class: 'form-control' %>
                  </div>
                </div>
                <div class='form-group'>
                  <div class='col-sm-10'>
                    <%= form.text_field :address2, placeholder: t(:address2), class: 'form-control' %>
                  </div>
                </div>
                <div class='form-group'>
                  <div class='col-sm-10'>
                    <%= form.text_field :state, placeholder: t(:state), class: 'form-control' %>
                  </div>
                </div>
                <div class='form-group'>
                  <div class='col-sm-10'>
                    <%= form.text_field :city, placeholder: t(:city), class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                    <%= form.submit "Create" , class: 'btn btn-default' %>
                  </div>
                </div>
            <% end %>
        </fieldset>
      </div>
    </div>
  </div>

 
  <div class="col-md-4">
    <div  class="panel panel-default"> 
      <div class="panel-body">
        <fieldset>
          <legend><%= t(:menu_options)%></legend>
            <table class="table table-striped table-bordered">  
            <tr>
              <th><%=t(:name) %></th>
              <th><%=t(:price) %></th>
              <th><%=t(:actions) %></th>
            </tr> 
              <% @food_place.menu_options.each do |menu_option| %>
              <tr>
              <td><%= menu_option.name %></td>
              <td><%= menu_option.price %></td>
              <td><%= link_to t(:edit), edit_food_place_menu_option_path(@food_place, menu_option) %>
                  <%= link_to t(:delete), food_place_menu_option_path(@food_place, menu_option), method: :delete %></td>
               </tr>
              <% end %>
          </table>
          <%= link_to t(:add_option), '#', {class: 'btn btn-primary',id: 'add-option',  role: 'button', data: { toggle: 'modal', target: '#myModal' }}  %>
          
          <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title" id="myModalLabel"><%= t(:new_menu_option)%></h4>
                </div>
                <div class="modal-body">
                  <%= render '/menu_options/form' %> 
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button id="save" type="button" class="btn btn-primary">Save changes</button>
                </div>
              </div>
            </div>
          </div>
        </fieldset>
      </div>
    </div>  
  </div>
</div>       
  

