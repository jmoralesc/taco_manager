<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @trio_food_places.each_with_index do |trio_food_place, index| %>
  <li data-target="#myCarousel" data-slide-to="<%= index%>" class="indicators"></li>
    <% end %>
  </ol>   
  
  <!-- Carousel items -->
  <div class="carousel-inner"> 
    
    <% @trio_food_places.each do |trio_food_place| %>
      <div class="item"> 
       
    <% trio_food_place.each do |food_place| %>
        
        <%= link_to food_place_path(food_place) do %>
        <div class="col-sm-2 col-md-4">
          <div class="thumbnail"> 
            <%= image_tag food_place.photo.processed, {class: 'img-rounded'} %>
              <div class="caption">
                <h4><%= food_place.name %></h4>
                <p>...</p>
              </div>
          </div>
        </div> 
        <% end %>
        <div class="carousel-caption">
          <h3>Second slide label</h3>
          <p>Aliquam sit amet gravida nibh, facilisis gravidaâ€¦</p>
        </div>
       <% end %>
      </div> 

    <% end %>

  </div>  

  <!-- Carousel nav -->
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>

</div>
 