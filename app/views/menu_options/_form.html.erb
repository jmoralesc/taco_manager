<%= form_for [@food_place, @menu_option], html: {class: 'form-horizontal', role: 'form', id: 'new_menu_option_form'} do |form| %>
  <div class='form-group'>
    <div class='col-sm-10'>
      <%= form.text_field :name, placeholder: t(:name), class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
    <div class='col-sm-10'>
      <%= form.text_field :price, placeholder: t(:price), class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <div class='col-sm-10'>
      <img id="preview" src="#" alt=""  class="img-rounded" />
    </div>
  </div>

  <div class='form-group'>
    <div class='col-sm-10'>
      <%= form.file_field :photo, class: 'filestyle', id: 'photo' %>
    </div>
  </div>
<% end %>