<div class="page-header without-margin-top">
  <h2><%= t(:sign_in)%></h2>
</div>

<div class='col-sm-10'>

    <div id='general' class='panel panel-default'>  
      <div class="panel-body">
         <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          
          <div class='form-group'>
              <div class='col-sm-10'>
                <%= f.text_field :login, placeholder: t(:login),autofocus: :true ,class: 'form-control'%>
              </div>
          </div>

            <div class='form-group'>
              <div class='col-sm-10'>
                <%= f.password_field :password, autocomplete: "off", placeholder: t(:password), class: 'form-control' %>
              </div>
            </div> 
           <div class='form-group'>
              <div class='col-sm-10'>

          <% if devise_mapping.rememberable? -%>
           <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
          <% end %>
          </div>
          </div>

          <div class='form-group'>
            <div class='col-sm-10'>
              <%= f.submit t(:sing_in), class: 'btn btn-primary' %>
            </div>
          </div> 
      
        <% end %>
      
      </div>
    </div> 
  </div> 


<%= render "devise/shared/links" %>
