<div class="page-header without-margin-top">
  <h2><%= t(:resend_confirmation_instructions)%></h2>
</div>
<div class='col-sm-10'>
    <div id='general' class='panel panel-default'>  
      <div class="panel-body">
         <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
           <%= devise_error_messages! %>
          <div class='form-group'>
              <div class='col-sm-10'>
                <%= f.text_field :login, placeholder: t(:login), class: 'form-control', autofocus: :true%>
              </div>
          </div>   
          <div class='form-group'>
            <div class='col-sm-10'>
              <%= f.submit t(:resend_confirmation_instructions), class: 'btn btn-primary' %>
            </div>
          </div> 
        <% end %>
      </div>
    </div> 
  </div> 
  <%= render "devise/shared/links" %>

